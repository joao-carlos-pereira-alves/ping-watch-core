<main class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="p-4" style="width: 100%; max-width: 400px;">
    <img class="card-img-top rounded-circle mx-auto mb-4 border border-light" src="<%= asset_path('logo.png') %>" alt="Logo do Site" width="150" height="150">
    <h1 class="h3 mb-4 text-center"><%= I18n.t('login.session.sign_in') %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: I18n.t('login.fields.email_placeholder') %>
        <label for="floatingInput"><%= I18n.t('login.fields.email') %></label>
      </div>

      <div class="form-floating mb-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "floatingPassword", placeholder: I18n.t('login.fields.password_placeholder') %>
        <label for="floatingPassword"><%= I18n.t('login.fields.password') %></label>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
          <label class="form-check-label" for="rememberMe"><%= I18n.t('login.fields.remember_me') %></label>
        </div>
      <% end %>

      <%= invisible_recaptcha_tags(ui: :button, text: I18n.t('login.fields.sign_in_button'), class: "w-100 btn btn-lg btn-primary") %>
    <% end %>

    <p class="mt-4 mb-3 text-muted text-center">&copy; 2024</p>
  </div>
</main>