<main class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
  <div class="p-4" style="width: 100%; max-width: 400px;">
    <img class="card-img-top rounded-circle mx-auto mb-4 border border-light" src="<%= asset_path('logo.png') %>" alt="Logo do Site" width="150" height="150">
    <h1 class="h3 mb-4 text-center"><%= I18n.t('devise.signup.session.create_account') %></h1>

    <% if alert %>
      <div class="alert alert-danger">
        <ul>
          <% alert.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-floating mb-3">
        <%= f.text_field :name, autofocus: true, class: "form-control", id: "floatingInput", placeholder: I18n.t('devise.signup.fields.name') %>
        <label for="floatingInput"><%= I18n.t('devise.signup.fields.name') %></label>
      </div>

      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: I18n.t('devise.signup.fields.email_placeholder') %>
        <label for="floatingInput"><%= I18n.t('devise.signup.fields.email') %></label>
      </div>

      <div class="form-floating mb-4">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder: I18n.t('devise.signup.fields.password_placeholder') %>
        <label for="floatingPassword"><%= I18n.t('devise.signup.fields.password') %></label>
      </div>

      <%= invisible_recaptcha_tags(ui: :button, text: I18n.t('devise.signup.fields.create_account_button'), class: "w-100 btn btn-lg btn-primary") %>
    <% end %>

    <!-- Link para a pÃ¡gina de login (voltar) -->
    <div class="text-center mt-3">
      <%= link_to 'Voltar', new_user_session_path, class: "btn btn-link" %>
    </div>

    <p class="mt-4 mb-3 text-muted text-center">&copy; 2024</p>
  </div>
</main>
